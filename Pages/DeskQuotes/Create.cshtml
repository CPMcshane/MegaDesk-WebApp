@page
@model MegaDesk_WebApp.Pages.DeskQuotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Quote</h1>


<hr />
<div class="form-div">
<form method="post">
    
        <div class="col-md-12">  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="DeskQuote.DateAdded" class="control-label"></label>
                <input asp-for="DeskQuote.DateAdded" class="form-control" />
                <span asp-validation-for="DeskQuote.DateAdded" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row row">    
            <div class="form-group col-md-2">
                <label asp-for="DeskQuote.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Width" class="form-control" />
                <span asp-validation-for="DeskQuote.Width" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="DeskQuote.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Depth" class="form-control" />
                <span asp-validation-for="DeskQuote.Depth" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="DeskQuote.Drawers" class="control-label"></label>
                <input asp-for="DeskQuote.Drawers" class="form-control" />
                <span asp-validation-for="DeskQuote.Drawers" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="DeskQuote.Material" class="control-label"></label>
                <select asp-for="DeskQuote.Material" class="form-control" asp-items="Html.GetEnumSelectList<SurfaceMaterial>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="DeskQuote.Material" class="text-danger"></span>
            </div>
            <div class="surface-img-group">
                <img src="../Assets/oak.jpg" alt="Oak" />
                <img src="../Assets/laminate.jpg" alt="Laminate" />
                <img src="../Assets/pine.jpg" alt="Pine" />
                <img src="../Assets/rosewood.jpg" alt="Rosewood" />
                <img src="../Assets/veneer.jpg" alt="Veneer" />
            </div>
        </div>

            <div class="form-group col-md-4">
                <label asp-for="DeskQuote.ProductionTime" class="control-label"></label>
                <select asp-for="DeskQuote.ProductionTime" class="form-control">
                    <option selected="selected" value="0">3 Days</option>
                    <option selected="selected" value="1">5 Days</option>
                    <option selected="selected" value="2">7 Days</option>
                    <option selected="selected" value="14">14 Days</option>
                </select>
                <span asp-validation-for="DeskQuote.ProductionTime" class="text-danger"></span>
            </div>
       
    
            <div class="btn">
        <input type="submit" value="Create" class="btn btn-success" />
            </div>
    
</form>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


